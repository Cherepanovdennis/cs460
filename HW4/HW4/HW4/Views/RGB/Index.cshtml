
@{
    ViewData["Title"] = "Request color";
}

<h1>Give Values</h1>
<div class="row">
    <div class=" col-md-4">
        @using (Html.BeginForm("Index", "RGB", FormMethod.Get))
        {

        <div class="form-group">
            @Html.Label("red", "Red: ")
            @Html.TextBox("red", null, new { @class = "form-control", type = "number", min = "0", max = "255", id = "redid", name = "Red" })
            @Html.Label("green", "Green: ")
            @Html.TextBox("green", null, new { @class = "form-control", type = "number", min = "0", max = "255", id = "greenid", name = "Green" })
            @Html.Label("blue", "blue: ")
            @Html.TextBox("blue", null, new { @class = "form-control", type = "number", min = "0", max = "255", id = "blueid", name = "Blue" })
            <br />
            <button type="submit" class="btn btn-primary">Submit </button>
            <br />

            @if (ViewBag.Success == true)
            {
                <br/>
                <div class="row">
                    <div class="col-md-4">
                        <table>
                            <tr>
   
                                <td   height="100" style=" width: 100px; background-color: rgb(@ViewBag.RedRGB, @ViewBag.GreenRGB, @ViewBag.BlueRGB);" > </td>
                            </tr>
                        </table>

                        <p><b>@ViewBag.Hex</b></p>
                    </div>
                </div>

                
            }




        </div>
        }
    </div>

</div>

