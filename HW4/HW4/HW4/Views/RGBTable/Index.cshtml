
@{
    ViewData["Title"] = "RGBTable";
}

<h1>Hex Table</h1>
<p>Please Enter color in HTML hex format: #AABBCC</p>

<div class="row">
    <div class=" col-md-10">
        @using (Html.BeginForm("Index", "RGBTable", FormMethod.Post))
        {
            @if (ViewBag.success == true)
            {
    
                <table align="right">
                    <tr>
                        <th><b>HTML</b></th>
                        <th><b>Color</b></th>
                    </tr>

                    @foreach (var hexvalue in (IEnumerable<String>)ViewBag.hexlist)
                    {
                        <tr>
                            <td>@hexvalue</td>
                            <td bgcolor="@hexvalue"> </td>
                        </tr>
                    }

                </table>
                }

    <div class="col-md-4">
        @Html.Label("hexfirstcolor", "First Color: ")
        @Html.TextBox("hexfirstcolor", null, new { @class = "form-control", type = "text", maxlength = "7", min = "0", onkeyup = "this.value = this.value.toUpperCase();" })
        @Html.Label("hexsecondcolor", "Second Color: ")
        @Html.TextBox("hexsecondcolor", null, new { @class = "form-control", type = "text", maxlength = "7", min = "0", onkeyup = "this.value = this.value.toUpperCase();" })
        @Html.Label("steps", "Steps: ")
        @Html.TextBox("steps", null, new { @class = "form-control", type = "number", min = "0" })
        <br />
        <button type="submit" class="btn btn-primary">Submit </button>
        </div>
        <br />
        <br />
        @if(ViewBag.HexValue == false)
        {
            <p>Please put in a valid hex format!</p>
        }
        }
    </div>
</div>